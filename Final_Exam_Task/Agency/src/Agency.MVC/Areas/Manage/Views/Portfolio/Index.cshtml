@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<div class="container-fluid align-items-center">
    <h2>Index</h2>
    <a class="btn btn-primary" asp-action="create" asp-controller="portfolio">Create</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Caption</th>
                <th scope="col">Category</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var portfolio in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@portfolio.Caption</td>
                    <td>@portfolio.Category</td>
                    <td><img width="70px" src="~/uploads/portfolios/@portfolio.ImageUrl" /></td>
                    <td>
                        <a class="btn btn-warning" asp-action="update" asp-controller="portfolio" asp-route-id="@portfolio.Id">Update</a>
                        <a class="btn btn-danger" asp-action="delete" asp-controller="portfolio" asp-route-id="@portfolio.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
